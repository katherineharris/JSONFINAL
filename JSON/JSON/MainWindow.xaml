        <Label x:Name="lblGenre" Content="Movie Genres:" HorizontalAlignment="Left" Margin="51,30,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstGenres" HorizontalAlignment="Left" Height="120" Margin="51,61,0,0" VerticalAlignment="Top" Width="169"/>
        <Label x:Name="lbl350000" Content="Votes users &gt; 350000:" HorizontalAlignment="Left" Margin="51,193,0,0" VerticalAlignment="Top"/>
